<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".destinos"
    android:orientation="vertical">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      <Button
          android:id="@+id/btnVolver"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="VOLVER A LISTA" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="DESTINO"
          android:textColor="@color/white"
          android:background="@color/colot1"
          android:textSize="25dp"
          android:gravity="center_horizontal"/>

      <TextView
          android:id="@+id/lblDestino"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="lblDestino"
          android:gravity="center"
          android:textSize="17dp"/>

      <TextView
          android:id="@+id/textView8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="COORDENADAS"
          android:textColor="@color/white"
          android:background="@color/colot1"
          android:textSize="25dp"
          android:gravity="center_horizontal"/>

      <TextView
          android:id="@+id/lblCoordenadas"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="lblCoordenadas"
          android:gravity="center"
          android:textSize="17dp"/>

      <TextView
          android:id="@+id/textView10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="INFORMACION"
          android:textColor="@color/white"
          android:background="@color/colot1"
          android:textSize="25dp"
          android:gravity="center_horizontal"/>

      <TextView
          android:id="@+id/lblInfo"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:gravity="center"
          android:text="lblInfo"
          android:textSize="17dp" />

    </LinearLayout>
  </ScrollView>
</LinearLayout>